# Production Environment Variables
NODE_ENV=production

# Database
DATABASE_URL=your_postgresql_connection_string_here

# JWT Secret (generate a strong one)
JWT_SECRET=your_very_long_random_jwt_secret_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Resend API Key for emails
RESEND_API_KEY=your_resend_api_key_here

# Twilio (if using SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Frontend URL (will be set by Railway)
FRONTEND_URL=https://your-app-name.railway.app

# Backend URL (will be set by Railway)
BACKEND_URL=https://your-app-name.railway.app

# CORS Origins (add your domain)
CORS_ORIGINS=https://your-app-name.railway.app,https://your-custom-domain.com
